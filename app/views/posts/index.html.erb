<h1>Your InstaPosts</h1>

<%= link_to 'New InstaPost', new_post_path %>

<table>
  <tr>
    <th>InstaPost</th>
    <th></th>
  </tr>

  <% @posts.each do |post| %>
    <tr>
      <td><%= post.text %></td>
      <td><%= link_to 'Show', post_path(post) %></td>
      <td><%= link_to 'Edit', edit_post_path(post) %></td>
      <td><%= link_to 'Delete', post_path(post), method: :delete, data: { confirm: 'Are you sure you want to delete this Post?' } %></td>
    </tr>
  <% end %>
</table>